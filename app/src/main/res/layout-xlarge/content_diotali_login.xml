<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="sn.diotali.tfe_usager_dgid.DiotaliLogin"
    tools:showIn="@layout/activity_diotali_login">

    <ImageView
    android:id="@+id/img_home"
    android:layout_width="406dp"
    android:layout_height="406dp"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="120dp"
    android:adjustViewBounds="false"
    android:contentDescription="@string/app_name"
    android:cropToPadding="false"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@mipmap/dgid_logo_big" />
    <ImageView
        android:id="@+id/img_line"
        android:layout_width="206dp"
        android:layout_height="306dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:cropToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_home"
        app:srcCompat="@mipmap/white_line" />

    <TextView
        android:id="@+id/txt_v_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="190dp"
        android:textSize="@dimen/dimen_text_size_normal"
        android:hint="@string/error"
        android:textColor="@color/colorRed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_line" />

    <EditText
        android:id="@+id/edt_login"
        android:layout_width="@dimen/dimen_tf_width"
        android:layout_height="@dimen/dimen_tf_height"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edt_background2"
        android:ems="20"
        android:gravity="center"
        android:hint="@string/login"
        android:inputType="text"
        android:textSize="@dimen/dimen_text_size_normal"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toRightOf="@+id/img_line"
        app:layout_constraintTop_toBottomOf="@+id/txt_v_error" />


    <EditText
        android:id="@+id/edt_password"
        android:layout_width="@dimen/dimen_tf_width"
        android:layout_height="@dimen/dimen_tf_height"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edt_background2"
        android:ems="20"
        android:gravity="center"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_line"
        app:layout_constraintTop_toBottomOf="@+id/edt_login" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="@dimen/dimen_btn5_width"
        android:layout_height="@dimen/dimen_btn5_height"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/btn_background"
        android:text="@string/connecter"
        android:textColor="@color/colorWhite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/img_line"
        app:layout_constraintTop_toBottomOf="@+id/edt_password" />

    <ImageView
        android:id="@+id/img_powered"
        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:layout_marginStart="150dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:cropToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_home"
        app:srcCompat="@mipmap/powered" />

    <EditText
        android:id="@+id/edt_date"
        android:layout_width="@dimen/dimen_tf_width"
        android:layout_height="@dimen/dimen_tf_height"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/round_rect_black2"
        android:ems="20"
        android:gravity="center"
        android:hint="@string/login"

        android:inputType="text"
        android:textSize="@dimen/dimen_text_size_normal"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
